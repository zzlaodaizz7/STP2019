<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnCreateMatch"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="18dp"
                android:layout_toLeftOf="@+id/btnNotification"
                android:background="@drawable/custom_simple_button"
                android:text="Đăng tin"
                android:textAllCaps="false"/>

            <ImageButton
                android:id="@+id/btnNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/black_notifocation"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="#fff"
                android:layout_alignBottom="@+id/btnCreateMatch"
                android:layout_alignTop="@+id/btnCreateMatch"/>

            <View
                android:id="@+id/viewSearch_Up"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#DCD9D9"
                android:layout_below="@id/btnCreateMatch"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/edtxtSearch"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Nhập tên hoặc địa chỉ"
                android:textSize="12sp"
                android:textColor="#000"
                android:inputType="textVisiblePassword"
                android:drawableRight="@drawable/search"
                android:layout_below="@+id/btnCreateMatch"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:background="@android:color/transparent"/>

            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtxtSearch"
                android:background="#F4F3F3"
                android:id="@+id/ConstrainLayoutChooseStatusAndLevelAndTime">

                <Button
                    android:id="@+id/btnChooseStatus"
                    android:layout_width="135dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:drawableRight="@drawable/down24"
                    android:text="Trạng thái      "
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/custom_simple_button"/>

                <Button
                    android:id="@+id/btnChooseLevel"
                    android:layout_width="135dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:drawableRight="@drawable/down24"
                    android:text="Trình độ    "
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/btnChooseStatus"
                    android:background="@drawable/custom_simple_button"/>

                <View
                    android:id="@+id/viewChooseTime_Up"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#DCD9D9"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/btnChooseStatus"
                    app:layout_constraintLeft_toLeftOf="@+id/btnChooseStatus"/>

                <TextView
                    android:id="@+id/txtChooseTime_Left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/viewChooseTime_Up"
                    app:layout_constraintLeft_toLeftOf="@+id/btnChooseStatus"
                    app:layout_constraintBottom_toBottomOf="@+id/viewChooseTime_Down"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="Thời gian"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/txtChooseTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/icon_right_18dp"
                    android:text="--:--"
                    android:textColor="@color/mauChuNhat"
                    android:textSize="12sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtChooseTime_Left"
                    app:layout_constraintBottom_toBottomOf="@+id/txtChooseTime_Left"/>

                <View
                    android:id="@+id/viewChooseTime_Down"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#DCD9D9"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btnTimTranDau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/ConstrainLayoutChooseStatusAndLevelAndTime"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_button_dx"
                android:text="Tìm kiếm"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"/>

            <View
                android:id="@+id/viewSearch_down"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F4F3F3"
                android:layout_below="@id/btnTimTranDau"
                android:layout_marginTop="10dp"/>

            <ListView
                android:id="@+id/listViewMatch"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/viewSearch_down"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1.0sp" />
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>