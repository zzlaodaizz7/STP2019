<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/TextViewDoiThuBa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/LayoutTranDauDaDienRa"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/ic_launcher"
        android:text="ABC"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/LayoutTranDauDaDienRa"
        app:layout_constraintBottom_toBottomOf="@+id/TextViewDoiThuBa"
        app:layout_constraintLeft_toRightOf="@id/TextViewDoiThuBa"
        app:layout_constraintRight_toLeftOf="@id/TextViewDoiThuTu"
        app:layout_constraintTop_toTopOf="@+id/TextViewDoiThuBa"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/TextViewNgayTranDauDaDienRa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/1010"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/TextViewGioTranDauDaDienRa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="17:30"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextViewSoBanThangDoiMot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="@android:color/holo_green_light"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/TextViewDauCachTiSo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@android:color/holo_green_light"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/TextViewSoBanThangDoiHai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/holo_green_light"
                android:textSize="30sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/TextViewDoiThuTu"
        app:layout_constraintLeft_toRightOf="@id/LayoutTranDauDaDienRa"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/ic_launcher"
        android:text="ABC"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="14sp" />
</LinearLayout>