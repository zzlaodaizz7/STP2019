<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/TextViewThuTuDongXepHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="1"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextViewTenDoiBongDongXepHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FC fb"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/TextViewDiemDoiBong"
        app:layout_constraintLeft_toRightOf="@id/TextViewThuTuDongXepHang"
        app:layout_constraintTop_toTopOf="@id/TextViewThuTuDongXepHang"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/TextViewDiemDoiBong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.50 Điểm"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/TextViewThuTuDongXepHang"
        app:layout_constraintStart_toStartOf="@id/TextViewTenDoiBongDongXepHang"
        app:layout_constraintTop_toBottomOf="@id/TextViewTenDoiBongDongXepHang" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_right_24dp"
        app:layout_constraintBottom_toBottomOf="@id/TextViewThuTuDongXepHang"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/TextViewThuTuDongXepHang"/>

</androidx.constraintlayout.widget.ConstraintLayout>