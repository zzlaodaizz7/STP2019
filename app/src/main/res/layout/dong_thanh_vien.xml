<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ImageViewDaiDienThanhVienDoiBong"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextViewTenThanhVien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Tên thành viên"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/ImageViewDaiDienThanhVienDoiBong"
        app:layout_constraintTop_toTopOf="@id/ImageViewDaiDienThanhVienDoiBong" />

    <TextView
        android:id="@+id/TextViewChucVu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chức vụ"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/TextViewTenThanhVien"
        app:layout_constraintTop_toBottomOf="@id/TextViewTenThanhVien" />
</androidx.constraintlayout.widget.ConstraintLayout>