<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#fff"
    android:id="@+id/match"
     >

    <TextView
        android:id="@+id/txtTeamHost"
        android:text="Team Host 's name"
        android:textSize="14sp"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtState"
        android:text="State"
        android:textSize="12sp"
        android:layout_below="@+id/txtTeamHost"
        android:textColor="#2DAA1F"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/txtState"
        android:layout_marginTop="5dp"/>

    <!--thoi gian dien ra tran dau-->
    <ImageView
        android:id="@+id/iconTime"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/icon_thoi_gian_24px"
        android:layout_below="@+id/txtState"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp" />
    <TextView
        android:id="@+id/txtTime"
        android:text="Thời gian"
        android:textColor="@color/mauChuNhat"
        android:textSize="12sp"
        android:layout_alignTop="@+id/iconTime"
        android:layout_alignBottom="@+id/iconTime"
        android:layout_toRightOf="@+id/iconTime"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--San bong-->
    <ImageView
        android:id="@+id/iconPitch"
        android:layout_below="@+id/txtTime"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/icon_san_bong_24px"/>
    <TextView
        android:id="@+id/txtPitch"
        android:text="Sân nhà"
        android:textColor="@color/mauChuNhat"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/iconPitch"
        android:layout_alignTop="@+id/iconPitch"
        android:layout_alignBottom="@+id/iconPitch"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iconLevel"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/icon_doi_bong_24px"
        android:layout_below="@+id/txtPitch"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/txtLevel"
        android:text="Trình độ"
        android:textColor="@color/mauChuNhat"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/iconLevel"
        android:layout_alignTop="@+id/iconLevel"
        android:layout_toRightOf="@+id/iconLevel"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>