<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ImageViewDongDoiBatDoi"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextViewTenDoiBongBatDoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="FC fb"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/ImageViewDongDoiBatDoi"
        app:layout_constraintTop_toTopOf="@id/ImageViewDongDoiBatDoi" />

    <TextView
        android:id="@+id/TextViewDiemDoiBongBatDoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.50 Điểm"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/TextViewTenDoiBongBatDoi"
        app:layout_constraintTop_toBottomOf="@id/TextViewTenDoiBongBatDoi" />

    <Button
        android:id="@+id/ButtonDongYBatDoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/custom_button_default_dx"
        android:text="Đồng ý"
        android:textColor="@drawable/custom_text_color"
        app:layout_constraintBottom_toBottomOf="@id/ImageViewDongDoiBatDoi"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ImageViewDongDoiBatDoi" />

</androidx.constraintlayout.widget.ConstraintLayout>