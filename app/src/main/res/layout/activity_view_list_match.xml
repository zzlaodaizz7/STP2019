<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnDangtin"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="Đăng tin"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#000"
                android:layout_below="@id/btnDangtin"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/edtxtSearch"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Search products.."
                android:inputType="textVisiblePassword"
                android:drawableRight="@drawable/search"
                android:layout_below="@+id/btnDangtin"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:paddingLeft="10dp"/>
            <Button
                android:id="@+id/btnChonTrangThai"
                android:text="Trạng thái  "
                android:textAlignment="textStart"
                android:drawableRight="@drawable/down24"
                android:layout_below="@+id/edtxtSearch"
                android:layout_alignLeft="@id/edtxtSearch"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>

            <Button
                android:id="@+id/btnChonTrinhDo"
                android:text="Trình độ  "
                android:textAlignment="textStart"
                android:drawableRight="@drawable/down24"
                android:layout_below="@+id/edtxtSearch"
                android:layout_toRightOf="@+id/btnChonTrangThai"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>

            />

            <TextView
                android:id="@+id/txtThoiGian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnChonTrangThai"
                android:layout_alignLeft="@+id/btnChonTrangThai"
                android:layout_marginTop="20dp"
                android:text="Thời gian"
                android:textColor="#000"
                android:textSize="18sp" />
            <Button
                android:id="@+id/btnTimTranDau"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/txtThoiGian"
                android:layout_alignLeft="@+id/txtThoiGian"
                android:layout_marginTop="20dp"
                android:text="Tìm trận đấu"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#000"
                android:layout_below="@id/btnTimTranDau"
                android:layout_marginTop="10dp"/>

            <ListView
                android:id="@+id/listViewMatch"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1.0sp"
                android:layout_below="@+id/btnTimTranDau"
                android:layout_marginTop="20dp"/>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>