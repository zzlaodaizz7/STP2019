<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="50dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/TextViewTime1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2A000000"
        android:gravity="center"
        android:text="17:30 - 19:00"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/TextViewTime2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/TextViewTime2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="center"
        android:text="19:00 - 20:30"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/TextViewTime3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TextViewTime1" />

    <Button
        android:id="@+id/TextViewTime3"
        android:layout_width="match_parent"
        android:background="#2A000000"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="20:30 - 22:00"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TextViewTime2" />

</androidx.constraintlayout.widget.ConstraintLayout>