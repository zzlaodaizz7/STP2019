<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TextViewBangXepHang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_mau_action_bar_dx"
        android:drawableRight="@drawable/ic_reset_xep_hang_doi_bong"
        android:padding="10dp"
        android:text="Bảng Xếp Hạng"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/ListViewXepHangDoiBong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TextViewBangXepHang"/>
</androidx.constraintlayout.widget.ConstraintLayout>