<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/ImageViewDoiBong"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextViewTenDoiBong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Tên đội bóng"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/ImageViewDoiBong"
        app:layout_constraintTop_toTopOf="@id/ImageViewDoiBong" />

    <TextView
        android:id="@+id/TextViewTrangThai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đã tham gia"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/TextViewTenDoiBong"
        app:layout_constraintTop_toBottomOf="@id/TextViewTenDoiBong" />
</androidx.constraintlayout.widget.ConstraintLayout>